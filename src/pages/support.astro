---
import Layout from '../layouts/Layout.astro';
import Nav from '../layouts/Nav.astro';
import Footer from '../layouts/Footer.astro';
import Email from '../components/Email.astro';
---
<Layout title='Zinzo | Support' description='Zinzo currently has no public support'>
	<Nav />
    <Email />
    <div>
        <p>No current support articles exist (yet).</p>
    </div>
