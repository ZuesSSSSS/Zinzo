---
import LogoIcon from '/Logo.svg';
import HamburgerNav from './Hamburger.astro';
---
<nav>
	<ul class="container">
		<li class='Logo'>
			<a href='/'>
				<img class='LogoSVG' src={LogoIcon} alt='Zinzo Logo'> Zinzo
			</a>
		</li>
		<li class='About-us'>
			<a href='/about-us'>About us</a>
		</li>
		<li class='Support'>
			<a href='/'>Support</a>
		</li>
		<li class='Pricing'>
			<a href='/'>Pricing</a>
		</li>
		<li class='Documentation'>
			<a href='/'>Documentation</a>
		</li>
		<li class='Login'>
			<a href='/'>Login</a>
		</li>
		<li class='Get-Started'>
			<a href='/'>Get Started</a>
		</li>
		<li class='Hamburger'>
			<HamburgerNav />
		</li>
	</ul>

</nav>

<style>
	nav {
		margin: 0;
		padding: 0;
	}
	ul {
		display: grid;
		list-style: none;
		margin: 0;
		padding: 0;

	}
	li a {
		display: flex;
		align-items: center;
		font-family: 'Inter', sans-serif;
		font-weight: 600;
		text-decoration: none;
		color: white;
	}
	li {
		display: flex;
		justify-content: center;
	}
	.About-us a,
	.Support a,
	.Pricing a, 
	.Documentation a {
		position: relative;
	}

	.About-us a:hover:after,
	.Support a:hover:after,
	.Pricing a:hover:after, 
	.Documentation a:hover:after {
		width: 100%; 
  		left: 0; 
	}
	.About-us a:after,
	.Support a:after,
	.Pricing a:after, 
	.Documentation a:after {
		background: none repeat scroll 0 0 transparent;
		bottom: 0;
		content: "";
		/* display: block; */
		height: 2px;
		left: 50%;
		position: absolute;
		background: #fff;
		transition: width 0.3s ease 0s, left 0.3s ease 0s;
		width: 0;
	}

	.Logo {
		padding:15px;
		font-size: 40px;
	}
	.LogoSVG {
		margin-right: 25px;
	}
	.About-us a, .Support a, .Pricing a, .Documentation a {
		padding: 5px;
		white-space: nowrap;
		margin: 15px
	}
	.About-us, .Support, .Pricing, .Documentation, .Login, .Get-Started {
		font-size: 20px;
	}

	.Login a {
		background-color: inherit;
		color: white;
		border: 1px solid white;
		border-radius: 10px;
		padding: 10px 20px 10px 20px;
		margin: 20px 25px 20px 10px;
	}
	.Login a:hover {
		background-color: white;
		color: black
	}
	.Get-Started a {
		background-color: #410074;
		color: white;
		border: 1px solid #410074;
		border-radius: 10px;
		padding: 10px 20px 10px 20px;
		margin: 20px 25px 20px 10px;
		white-space: nowrap;
	}
	.Get-Started a:hover {
		background-color: #983dd1;
	}
	@media (max-width: 1920px) {
		.container {
			grid-template-columns: repeat(2, 1.5fr) repeat(4, 1fr) 1.5fr 1fr 1.25fr; 
		}
		.Hamburger {
			display: none;
		}

	}
	@media (max-width: 1200px) {
		.About-us, .Support, .Pricing, .Documentation, .Login, .Get-Started {
			display: none;
		}
		.Hamburger {
			display: flex;
		}
	}

	.container {  
		display: grid;
		grid-template-columns: repeat(2, 1.5fr) repeat(4, 1fr) 1.5fr 1fr 1.25fr;
		grid-template-rows: 1fr;
		grid-auto-columns: 1fr;
		gap: 0px 0px;
		grid-auto-flow: row;
	}
	.Logo { grid-area: 1 / 1 / 2 / 2; }
	.About-us { grid-area: 1 / 3 / 2 / 4; }
	.Support { grid-area: 1 / 4 / 2 / 5; }
	.Pricing { grid-area: 1 / 5 / 2 / 6; }
	.Documentation { grid-area: 1 / 6 / 2 / 7; }
	.Login { grid-area: 1 / 8 / 2 / 9; }
	.Get-Started { grid-area: 1 / 9 / 2 / 10; }
	.Hamburger { grid-area: 1 / 8 / 2 / 10; }
</style>
